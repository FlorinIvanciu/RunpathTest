@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h2>DataTable</h2>

    <table id="Datatable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Photo title</th>
                <th>Album name</th>
                <th>Thumbnail image</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section scripts
    {
    <script>
    $(document).ready(function () {
        $("#Datatable").DataTable({
            ajax: {
                url: "/api/datatable",
                dataSrc: ""
            },
            columns: [
                {
                    data: "photoTitle"
                },
                {
                    data: "albumName"
                },
                {
                    data: "thumbnail",
                    render: function (dataSource, type, photoList) {
                        return `<a href=${photoList.url}><img src=${dataSource} style="height:50px;width:50px;"/></a>`;
                    }
                }
            ]
        });
    });
    </script>

}